                    "dynamodb:GetItem",
                    "dynamodb:UpdateItem",
                    "dynamodb:DeleteItem",
       ],
      "Resource": [ "arn:aws:dynamodb:us-east-2:828009597444:table/Vorder-Creds" ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::vorder-user-recordings",
